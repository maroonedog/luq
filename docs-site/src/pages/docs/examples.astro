  const validator = Builder() // This creates overhead
    .use(requiredPlugin)
    .use(stringEmailPlugin)
    .for<User>()
    .v('email', b => b.string.required().email())
    .build();
  
  const result = validator.validate(req.body);
  // ...
});`}
