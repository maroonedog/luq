const userValidator = registry
  .toBuilder()
  .for<UserProfile>() // Same interface used in field rules
  .useField('email', emailRule)
  .useField('profile.firstName', firstNameRule)        // ‚úÖ Dot notation
  .useField('profile.bio', bioRule)                   // ‚úÖ Optional field
  .useField('address.country.code', countryCodeRule)  // ‚úÖ Deeply nested
  .useField('tags', tagsRule)                        // ‚úÖ Array field
  .useField('tags[*]', tagElementRule)               // ‚úÖ Array elements
  .v('username', b => b.string.required())           // Can mix with inline
  .build();

// Standalone validation - field rules work independently
