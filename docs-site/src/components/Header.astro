---
import LuqLogo from './LuqLogo.astro';
import ThemeToggle from './ThemeToggle.astro';
import MobileMenuButton from './MobileMenuButton.astro';

export const navItems = [
  { href: '/docs/getting-started', label: 'Docs' },
  { href: '/plugins', label: 'Plugins' },
  { href: '/benchmarks', label: 'Benchmarks' },
  { href: '/json-schema', label: 'JSON Schema' },
  { href: '/roadmap', label: 'Roadmap' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-40 w-full luq-blur border-b border-luq-neutral-200 dark:border-luq-neutral-800">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center group">
          <LuqLogo class="w-16 h-auto transition-transform group-hover:scale-110" width="60" height="40" />
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`
              text-sm font-medium transition-colors hover:text-luq-purple-600 dark:hover:text-luq-teal-400
              ${currentPath.startsWith(item.href) ? 'luq-nav-active' : 'text-luq-neutral-600 dark:text-luq-neutral-400'}
            `}
          >
            {item.label}
          </a>
        ))}
      </nav>
      
      <!-- Right side actions -->
      <div class="flex items-center space-x-4">
        <!-- GitHub link -->
        <a
          href="https://github.com/maroonedog/luq"
          target="_blank"
          rel="noopener noreferrer"
          class="text-luq-neutral-600 hover:text-luq-purple-600 dark:text-luq-neutral-400 dark:hover:text-luq-teal-400 transition-colors"
          aria-label="GitHub"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
        
        <!-- Theme toggle -->
        <ThemeToggle />
        
        <!-- Mobile menu button -->
        <MobileMenuButton />
      </div>
    </div>
  </div>
</header>